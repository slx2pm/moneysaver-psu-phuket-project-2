<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:orientation="vertical"
	android:layout_height="wrap_content">
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent" android:orientation="horizontal"
		android:layout_height="wrap_content">
		<LinearLayout android:layout_weight=".10"
			android:layout_width="0dip" android:orientation="vertical"
			android:layout_height="wrap_content">
			<ImageView android:layout_width="35dip"
				android:layout_height="35dip" android:id="@+id/listview_data_list_layout_img" />
		</LinearLayout>

		<LinearLayout android:layout_weight=".60"
			android:layout_width="0dip" android:orientation="vertical"
			android:layout_height="wrap_content">
			<LinearLayout android:layout_width="fill_parent"
				android:orientation="horizontal" android:layout_height="wrap_content">
				<ImageView android:layout_width="20dip"
					android:layout_height="20dip"
					android:id="@+id/listview_data_list_layout_imgTypeUsinng" />
				<TextView android:layout_weight="0.80"
					android:layout_width="0dip" android:typeface="serif"
					android:layout_height="wrap_content" android:id="@+id/listview_data_list_layout_description"
					android:textSize="15dip" android:text="Breakfast at P'pink"
					android:textStyle="bold" />
				
				<Button android:id="@+id/listview_data_list_layout_ButtonEdit"
					android:textColor="#FFFFFF" android:background="@drawable/edit_icon"
					android:layout_height="15dip" android:layout_width="15dip" />	
				<Button android:id="@+id/listview_data_list_layout_ButtonDelete"
					android:textColor="#FFFFFF" android:background="@drawable/delete_icon"
					android:layout_height="15dip" android:layout_width="15dip" />
			</LinearLayout>
			<LinearLayout android:layout_width="fill_parent"
				android:orientation="horizontal" android:layout_height="fill_parent">
				<TextView android:layout_weight=".20" android:layout_width="0dip"
					android:typeface="serif" android:layout_height="wrap_content"
					android:id="@+id/listview_data_list_layout_time" android:textSize="12dip"
					android:text="11.00 à¸™." />
				<TextView android:layout_weight=".25" android:layout_width="0dip"
					android:typeface="serif" android:layout_height="wrap_content"
					android:id="@+id/listview_data_list_layout_date" android:textSize="12dip"
					android:text="10/01/2011" />
				<TextView android:layout_weight="0.50"
					android:layout_width="0dip" android:typeface="serif"
					android:layout_height="wrap_content" android:id="@+id/listview_data_list_layout_amount"
					android:textSize="12dip" android:text="-500 Baht" android:gravity="right"
					android:textStyle="bold" />
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
	<View android:layout_width="fill_parent" android:layout_height="0.05dip"
		android:background="@drawable/color_line" />
</LinearLayout>