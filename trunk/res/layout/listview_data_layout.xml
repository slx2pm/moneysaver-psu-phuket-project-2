<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:orientation="vertical"
	android:layout_height="wrap_content">
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent" android:orientation="horizontal"
		android:layout_height="wrap_content">
		<LinearLayout android:layout_weight=".20"
			android:layout_width="0dip" android:orientation="vertical"
			android:layout_height="50dip">
			<ImageView android:layout_width="35dip"
				android:layout_height="35dip" android:id="@+id/listDataLayout_bankIcon" />
			<TextView android:layout_width="35dip" android:typeface="serif"
				android:layout_height="30dip" android:id="@+id/listDataLayout_percentText"
				android:textSize="13dip" android:text="50%" android:textStyle="bold" />
		</LinearLayout>
		<LinearLayout android:layout_weight=".35"
			android:layout_width="0dip" android:orientation="vertical"
			android:layout_height="wrap_content">
			<TextView android:layout_width="110dip" android:typeface="serif"
				android:layout_height="wrap_content" android:id="@+id/listDataLayout_bankName"
				android:textSize="12dip" android:textStyle="bold" />
			<TextView android:layout_width="110dip" android:typeface="serif"
				android:layout_height="wrap_content" android:id="@+id/listDataLayout_category"
				android:textSize="12dip" android:textStyle="bold" />
			<TextView android:layout_width="110dip" android:typeface="serif"
				android:layout_height="wrap_content" android:id="@+id/listDataLayout_currentDate"
				android:textSize="12dip" android:text="This is text1"
				android:textStyle="bold" />
		</LinearLayout>
		<LinearLayout android:layout_weight=".45"
			android:layout_width="0dip" android:orientation="vertical"
			android:layout_height="wrap_content" android:layout_gravity="right">
			<LinearLayout android:layout_weight=".50"
				android:layout_width="fill_parent" android:orientation="horizontal"
				android:layout_height="wrap_content" android:layout_gravity="right">
				<TextView android:layout_width="wrap_content"
					android:typeface="serif" android:layout_height="wrap_content"
					android:textSize="12dip" android:text = "รายรับ  :"
					android:textColor="#52B804" android:textStyle="bold" />
				<TextView android:layout_width="fill_parent"
					android:typeface="serif" android:layout_height="wrap_content"
					android:id="@+id/listDataLayout_IncomeAmount" android:textSize="12dip"
					android:textColor="#52B804" android:textStyle="bold" 
					android:gravity="right"/>
			</LinearLayout>
			<LinearLayout android:layout_weight=".50"
				android:layout_width="fill_parent" android:orientation="horizontal"
				android:layout_height="wrap_content" android:layout_gravity="right">
				<TextView android:layout_width="wrap_content"
					android:typeface="serif" android:layout_height="wrap_content"
					android:textSize="12dip" android:text = "วงเงิน   :"
					android:textStyle="bold" android:textColor="#FBDB00"/>
				<TextView android:layout_width="fill_parent"
					android:typeface="serif" android:layout_height="wrap_content"
					android:id="@+id/listDataLayout_Limit" android:textSize="12dip"
					android:textColor="#FBDB00" android:textStyle="bold" 
					android:gravity="right"/>
			</LinearLayout>
			<LinearLayout android:layout_weight=".50"
				android:layout_width="fill_parent" android:orientation="horizontal"
				android:layout_height="wrap_content" android:layout_gravity="right">
				<TextView android:layout_width="wrap_content"
					android:typeface="serif" android:layout_height="wrap_content"
					android:textSize="12dip" android:text = "รายจ่าย:"
					android:textStyle="bold" android:textColor="#E05818"/>
				<TextView android:layout_width="fill_parent"
					android:typeface="serif" android:layout_height="wrap_content"
					android:id="@+id/listDataLayout_expenseAmount" android:textSize="12dip"
					android:textColor="#E05818" android:textStyle="bold" 
					android:gravity="right"/>
			</LinearLayout>
		</LinearLayout>
		<LinearLayout android:layout_width="15dip"
			android:orientation="vertical" android:layout_height="15dip"
			android:layout_gravity="right">
			<Button android:id="@+id/listDataLayout_ButtonDelete"
				android:textColor="#FFFFFF" android:background="@drawable/delete_icon"
				android:layout_height="wrap_content" android:layout_width="wrap_content" />
		</LinearLayout>
	</LinearLayout>
	<ProgressBar android:layout_width="fill_parent"
		android:layout_height="5dip" style="?android:attr/progressBarStyleHorizontal"
		android:progressDrawable="@drawable/color_progress" android:id="@+id/listDataLayout_percentage"
		android:max="100" />
</LinearLayout>